pipeline{
    agent any
     tools {
        maven 'MAVEN-3.6.1'
    }
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'javasatya', url: 'https://github.com/satyasaidevops/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean sonar:sonar package"
                
            }
        }
        stage('Upload War To Nexus'){
            steps{
                  nexusArtifactUploader artifacts: [
                       [
                            artifactId: 'myweb', 
                            classifier: '', 
                            file: "target/myweb-8.2.0.war", 
                            type: 'war'
                       ]
                  ], 
                  credentialsId: 'nexus1', 
                  groupId: 'in.javahome', 
                  nexusUrl: 'http://35.89.168.190/:8081', 
                  nexusVersion: 'nexus3', 
                  protocol: 'http', 
                  repository: 'sample-releases', 
                  version: '8.2.0'  
              }
            }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new-satya']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb-8.2.0.war  ec2-user@172.31.47.62:/home/ec2-user/apache-tomcat-10.0.23/webapps/
                    
                    ssh ec2-user@172.31.47.62 /home/ec2-user/apache-tomcat-10.0.23/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.47.62 /home/ec2-user/apache-tomcat-10.0.23/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
